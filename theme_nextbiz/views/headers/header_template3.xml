<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<template id="theme_nextbiz_header_new3" inherit_id="website.layout" name="Header Three" active="False">
	    <xpath expr="//header" position="attributes">
	        <attribute name="t-attf-class" add="o_header_sidebar" separator=" "/>
	    </xpath>
	    <xpath expr="//header//nav" position="replace">
	        <nav data-name="Navbar" id="vouge-header-new-3" class="navbar navbar-expand-lg navbar-light o_colored_level o_cc shadow pb-3">
	            <div id="top_menu_container" class="container h-100 mt16 mb16">
	                <!-- Brand -->
	                <t t-call="website.placeholder_header_brand"/>
	                <!-- Navbar Toggler -->
	                <!-- <t t-call="website.navbar_toggler"/> -->
	                <div class="mobile-sidebar-toggle ms-auto d-block d-lg-none">
						<button type="button" id="show-sidebar" class="btn btn-sm d-block d-md-none m-0">
							<span class="ti ti-view-grid text-secondary fa-2x"></span>
						</button>
					</div>
					
	                <!-- Language Selector -->
	                <!-- <t t-call="website.placeholder_header_language_selector">
	                    <t t-set="_div_classes" t-value="'ml32'"/>
	                </t> -->
	                <!-- Navbar Collapse -->
	                <div id="top_menu_collapse" class="collapse navbar-collapse flex-column align-self-stretch align-items-stretch list-unstyled">
						<t t-call="website.placeholder_header_language_selector">
	                    <t t-set="_div_classes" t-value="'ml32'"/>
	                </t>
	                	<t t-set="menu_count" t-value="0"/>
	                	<t t-set="more_menu_count" t-value="0"/>
	                	
	            		<t t-call="website.navbar_nav">
	                        <t t-set="_nav_class" t-value="''"/>
	                        <!-- Menu -->
	                        <t t-foreach="website.menu_id.child_id" t-as="submenu">
	                        	<t t-set="menu_count" t-value="menu_count + 1"/>
	                        	<t t-if="menu_count &lt; 6">
	                            	<t t-call="website.submenu">
		                                <t t-set="item_class" t-value="'nav-item'"/>
		                                <t t-set="link_class" t-value="'nav-link'"/>
		                            </t>
	                            </t>
	                        </t>
	                        <li t-if="menu_count &gt; 5" class="nav-item more-item dropdown" >
								<a data-bs-toggle="dropdown" href="#" class="nav-link dropdown-toggle" aria-haspopup="true" aria-expanded="true">
									<span>Show More</span>
								</a>
								<ul class="dropdown-menu" role="menu">
									<t t-foreach="website.menu_id.child_id" t-as="submenu">
										<t t-set="more_menu_count" t-value="more_menu_count + 1"/>
			                        	<t t-if="more_menu_count &gt; 5">
			                            	<t t-call="website.submenu">
				                                <t t-set="item_class" t-value="'nav-item'"/>
				                                <t t-set="link_class" t-value="'nav-link'"/>
				                            </t>
			                            </t>
			                        </t>
								</ul>
							</li>
	                    </t>

	                    
	                    <div class="oe_structure oe_structure_solo" id="oe_structure_header_sidebar_1">
				            <section class="s_text_block" data-snippet="s_text_block" data-name="Text">
				                <div class="container">
				                    <!-- Social -->
				                    <div class="s_share mt-3" data-name="Social Media">
				                        <h5 class="s_share_title d-none">Follow us</h5>
				                        <a href="/website/social/facebook" class="s_share_facebook" target="_blank">
				                            <i class="fa fa-facebook rounded-circle shadow-sm"/>
				                        </a>
				                        <a href="/website/social/twitter" class="s_share_twitter" target="_blank">
				                            <i class="fa fa-twitter rounded-circle shadow-sm"/>
				                        </a>
				                        <a href="/website/social/linkedin" class="s_share_linkedin" target="_blank">
				                            <i class="fa fa-linkedin rounded-circle shadow-sm"/>
				                        </a>
				                        <a href="/website/social/instagram" class="s_share_instagram" target="_blank">
				                            <i class="fa fa-instagram rounded-circle shadow-sm"/>
				                        </a>
				                        <a class="link s_share_youtube" t-att-href="website.social_youtube"
										t-if="website.social_youtube" target="_blank">
											<i class="fa fa-youtube-play rounded-circle shadow-sm" />
										</a>
				                    </div>
				                    <!-- Separator -->
				                    <div class="s_hr text-start pt16 pb16" data-name="Separator">
				                        <hr class="w-100 mx-auto" style="border-top-width: 1px; border-top-style: solid; border-top-color: var(--400);"/>
				                    </div>
				                    <!-- Contact -->
				                    <div class="sidebar_contact">
				                    	<small><i class="fa fa-envelope fa-fw me-2"/><span><a href="mailto:info@yourcompany.example.com">info@yourcompany.example.com</a></span></small><br/>
				                    	<small><i class="fa fa-phone fa-fw me-2"/><span class="o_force_ltr"><a href="tel:+1 (650) 691-3277">+1 (650) 691-3277</a></span></small>
				                    </div>
				                    
				                </div>
				            </section>
				        </div>
	                    <ul class="login_nav nav navbar-nav">
	                       
				            <div class="s_hr text-start pt16 pb16" data-name="Separator">
				                <hr class="w-100 mx-auto" style="border-top-width: 1px; border-top-style: solid; border-top-color: var(--400);"/>
				            </div>
							<t t-call="portal.placeholder_user_sign_in">
								<t t-set="_item_class" t-valuef="nav-item mx-auto"/>
								<t t-set="_link_class" t-valuef="nav-link fw-bold"/>
							</t>
							
				            <t t-call="portal.user_dropdown">
				                <t t-set="_icon" t-value="true"/>
				                <t t-set="_user_name" t-value="true"/>
				                <t t-set="_item_class" t-value="'nav-item dropup '"/>
				                <t t-set="_link_class" t-value="'nav-link'"/>
				                <t t-set="_dropdown_menu_class" t-value="'position-absolute'"/>
				            </t>
	                       
		                    <div class="s_hr text-start pt16 pb16" data-name="Separator">
		                        <hr class="w-100 mx-auto" style="border-top-width: 1px; border-top-style: solid; border-top-color: var(--400);"/>
		                    </div>
		                    <small class="text-start"><span class="copyright">CopyrightÂ© 2022. All Rights Reserved by<span t-field="res_company.name" />
									</span></small>
	                    </ul>
	                </div>
	            </div>
	        </nav>
	       <!-- <t t-call="theme_nextbiz.bizople_mbl_side_bar"/> -->
	    </xpath>
	    <xpath expr="//header" position="after">
			<div class="d-block d-md-none">
				<t t-call="theme_nextbiz.bizople_mobile_bottom_icon_bar"/>
			</div>
		</xpath>
	</template>

	<template id="template_header_three_align_center" inherit_id="theme_nextbiz.theme_nextbiz_header_new3" active="False">
        <xpath expr="//t[@t-set='_nav_class']" position="replace">
            <t t-set="_nav_class" t-valuef="mx-auto"/>
        </xpath>
    </template>

    <template id="template_header_three_align_right" inherit_id="theme_nextbiz.theme_nextbiz_header_new3" active="False">
        <xpath expr="//t[@t-set='_nav_class']" position="replace">
            <t t-set="_nav_class" t-valuef="ms-auto"/>
        </xpath>
    </template>
</odoo>