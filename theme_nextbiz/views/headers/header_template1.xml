<?xml version="1.0" encoding="UTF-8"?>
<odoo>

	<template id="theme_nextbiz_header_new1" inherit_id="website.layout" name="Header One" active="False">
		<xpath expr="//header//nav" position="replace">
			<div class="oe_structure oe_structure_solo o_editable o_cc navbar-light" id="oe_structure_header_contact_1">
	            <section class="s_text_block top-header pt8 pb8">
	                <div class="container">
	                    <div class="row align-items-center text-center">
	                    	<div class="col-3 mobile-sidebar-toggle d-block d-md-none">
								<button type="button" id="show-sidebar" class="btn btn-md d-block d-md-none">
									<span class="ti ti-view-grid text-secondary fa-2x"></span>
								</button>
							</div>
	                    	<div class="col-9 col-md-4 col-lg-3 text-end text-md-start">
	                    		<div class="d-flex">
                					<a href="/" t-attf-class="navbar-brand logo #{_link_class}">
							            <span t-field="website.logo" t-options="{'widget': 'image'}" role="img" t-att-aria-label="'Logo of %s' % website.name" t-att-title="website.name"/>
							        </a>
	                    		</div>
	                    	</div>
	                    	
	                    	<div class="col-md-3 col-lg-6">
	                    		<div class="top-header-contact mx-auto d-none d-lg-flex" id="">
									<ul class=" mx-auto d-inline-block my-0 ps-0">
										<li class="nav-item">
											<a class="nav-link d-inline-flex">
												<div class="contact-icon mr8 my-auto">
													<i class="icon lnr lnr-phone-handset fa-2x"></i>
												</div>
												<div class="contact-data">
													<small class="text-muted">Requesting a Call:</small>
													
													<h5 t-out="res_company.phone"></h5>

												</div>
											</a>
										</li>
										
										<li class="nav-item">
											<a class="nav-link d-inline-flex">
												<div class="contact-icon mr8 my-auto">
													<i class="icon lnr lnr-map-marker fa-2x"></i>
												</div>
												<div class="contact-data">
													<small class="text-muted" t-out="res_company.street"/>
													
													<h5  t-out="res_company.city"></h5>

												</div>
											</a>
										</li>
										
									</ul>
								</div>
	                    	</div>
	                    	<div class="col-md-5 col-lg-3 text-end">
	                    		<div class="header-media text-end d-none d-md-inline-flex">
									<a class="link " t-att-href="website.social_facebook"
										t-if="website.social_facebook" target="_blank">
										<i class="fa fa-facebook" />
									</a>
									<a class="link " t-att-href="website.social_twitter"
										t-if="website.social_twitter" target="_blank">
										<i class="fa fa-twitter" />
									</a>
									<a class="link " t-att-href="website.social_linkedin"
										t-if="website.social_linkedin" target="_blank">
										<i class="fa fa-linkedin" />
									</a>
									<a class="link " t-att-href="website.social_youtube"
										t-if="website.social_youtube" target="_blank">
										<i class="fa fa-youtube-play" />
									</a>
									<a class="link  " t-att-href="website.social_instagram"
										t-if="website.social_instagram" target="_blank">
										<i class="fa fa-instagram"></i>
									</a>
									
									
									<div class="login_nav ms-1">
										<ul class="list-unstyled m-0">
											<t t-call="portal.placeholder_user_sign_in">
												<t t-set="_item_class" t-valuef="nav-item ms-lg-auto"/>
												<t t-set="_link_class" t-valuef="nav-link fw-bold"/>
											</t>
											<!-- User Dropdown -->
											<t t-call="portal.user_dropdown">
							                	<t t-set="_icon" t-value="true"/>

												<t t-set="_user_name" t-value="false"/>
												<t t-set="_item_class" t-valuef="nav-item dropdown ms-lg-auto"/>
												<t t-set="_link_class" t-valuef="nav-link fw-bold"/>
											</t>
											
										</ul>
										
									</div>
								</div>
	                    	</div>
	                    </div>
	                </div>
					
	            </section>
	        </div>
	        <nav data-name="Navbar" id="vouge-header-new-1" class="navbar navbar-light navbar-expand-lg o_colored_level o_cc shadow-sm d-block py-0">
	            <div class="bottom-header">
	            	<div id="top_menu_container" class="container">
						<div class="row align-items-center">
							<div class="col-md-8 col-lg-9 header_left">
								
								<nav class="navbar navbar-expand-md p-0 d-none d-md-block" id="bizople-header-new1">
									<div class="collapse navbar-collapse" id="header_new1-menuitem">
										<!-- <ul class="navbar-nav" id="top_menu"> -->
										<t t-call="website.navbar_nav" id="top_menu">
                        					<t t-set="_nav_class" t-valuef="me-auto"/>
											<t t-foreach="website.menu_id.child_id" t-as="submenu">
												<t t-call="website.submenu">
													<t t-set="item_class" t-value="'nav-item'" />
													<t t-set="link_class" t-value="'nav-link'" />
												</t>
											</t>
										</t>
										<!-- </ul> -->
										<ul class="list-unstyled mb-0">
											<t t-call="website.placeholder_header_language_selector">
											<t t-set="_div_classes" t-value="''"/>
										</t>
										</ul>
									</div>
								</nav>
							</div>
							<div class="col-md-4 col-lg-3 d-none d-md-block header_right">
								<div class="s_btn text-end" data-name="Button">
    								<a href="#" class="btn btn-primary btn-lg">Make An Appointment
    									<span class="fa fa-long-arrow-right ps-1 fa-1x"/>
    								</a>
        						</div>
							</div>
						</div>
		            </div>
	            </div>
	        </nav>
				<!-- <t t-call="theme_nextbiz.bizople_mbl_side_bar"/> -->
		</xpath>
		<xpath expr="//header" position="after">
			<div class="d-block d-md-none">
				<t t-call="theme_nextbiz.bizople_mobile_bottom_icon_bar"/>
			</div>
		</xpath>
	</template>
	<template id="template_header_one_align_center" inherit_id="theme_nextbiz.theme_nextbiz_header_new1" active="False">
        <xpath expr="//ul[@id='top_menu']" position="attributes">
            <attribute name="class">navbar-nav mx-md-auto</attribute>
        </xpath>
    </template>

    <template id="template_header_one_align_right" inherit_id="theme_nextbiz.theme_nextbiz_header_new1" active="False">
        <xpath expr="//ul[@id='top_menu']" position="attributes">
            <attribute name="class">navbar-nav ms-md-auto</attribute>
        </xpath>
    </template>
</odoo>