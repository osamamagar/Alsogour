<?xml version="1.0" encoding="UTF-8"?>
<odoo>

	<template id="theme_nextbiz_header10" inherit_id="website.layout" name="Header Ten" active="False">
		<xpath expr="//header//nav" position="replace">
			<!-- <t t-call="theme_nextbiz.search_popup"/> -->
			<nav data-name="Navbar" id="vouge-header10" t-attf-class="vouge-header10">
				<section class="top-header d-none d-md-block">
					<div class="container">
						<div class="row align-items-center">
							<div class="col-md-7">
								<div class="contact-time d-flex">
									<p class="text-white mb-0"><span class="fa fa-phone text-white me-2"/><span t-out="res_company.phone"/></p>
									<p class="text-white mb-0 ms-4"><span class="fa fa-envelope-o text-white me-2"/><span>info@bizople.com</span></p>
								</div>
							</div>
							<div class="col-md-5 pe-0">
								<div class="d-flex justify-content-end align-items-center">
									<div class="header-media text-end me-3">
										<a class="link text-white me-3" t-att-href="website.social_facebook"
											t-if="website.social_facebook" target="_blank">
											<i class="fa fa-facebook" />
										</a>
										<a class="link text-white me-3" t-att-href="website.social_twitter"
											t-if="website.social_twitter" target="_blank">
											<i class="fa fa-twitter" />
										</a>
										<a class="link text-white me-3" t-att-href="website.social_linkedin"
											t-if="website.social_linkedin" target="_blank">
											<i class="fa fa-linkedin" />
										</a>
										<a class="link text-white me-3" t-att-href="website.social_youtube"
											t-if="website.social_youtube" target="_blank">
											<i class="fa fa-youtube-play" />
										</a>
										<a class="link text-white me-3" t-att-href="website.social_instagram"
											t-if="website.social_instagram" target="_blank">
											<i class="fa fa-instagram"></i>
										</a>
										<div class="login_nav">
										<ul class="list-unstyled m-0">
											<t t-call="portal.placeholder_user_sign_in">
												<t t-set="_item_class" t-valuef="nav-item mx-auto"/>
												<t t-set="_link_class" t-valuef="nav-link fw-bold"/>
											</t>
											<!-- User Dropdown -->
											<t t-call="portal.user_dropdown">
							                	<t t-set="_icon" t-value="true"/>
												<t t-set="_user_name" t-value="false"/>
												<t t-set="_item_class" t-valuef="nav-item dropdown ms-lg-auto"/>
												<t t-set="_link_class" t-valuef="nav-link fw-bold"/>
											</t>
											
										</ul>
										</div>
									</div>
									<ul class="list-unstyled m-0">
										<t t-call="website.placeholder_header_language_selector">
										<t t-set="_div_classes" t-valuef="my-auto ms-0 header-language"/>
									</t>
									</ul>
								</div>
							</div>
						</div>
					</div>
				</section>
				<section class="middle-header navbar-light">
					<div class="container">
						<div class="row align-items-center">
							<div class="col-md-3 d-flex d-md-block mbl-div header_left">
								<div class="vouge-logo text-end text-md-start ms-auto">
									<a href="/" class="navbar-brand logo m-0">
							            <span t-field="website.logo" t-options="{'widget': 'image'}" role="img" t-att-aria-label="'Logo of %s' % website.name" t-att-title="website.name" />
							        </a>
								</div>
								<div class="mobile-sidebar-toggle d-block d-md-none ms-5">
									<button type="button" id="show-sidebar" class="btn btn-sm btn-dark d-block d-md-none">
										<span class="ti ti-view-grid text-secondary fa-2x"></span>
									</button>
								</div>
								<div class="mobile-cart d-block d-md-none">
									<t t-if="is_view_active('website_sale.products_add_to_cart')">
										<t t-set="website_sale_order" t-value="website.sale_get_order()" />
			                			<div id="my_cart" t-attf-class="o_wsale_my_cart header_cart nav-item#{'' if website_sale_order and website_sale_order.cart_quantity else ''}">
											<a href="/shop/cart" class="nav-link">
												<span class="text-secondary icon icon-FullShoppingCart"></span>
												<sup t-attf-class="my_cart_quantity badge badge-primary text-bg-primary"
													t-out="website_sale_order and website_sale_order.cart_quantity or '0'" />
											</a>
										</div>
									</t>
								</div>
							</div>
							<div class="col-md-6 d-none d-md-block header-center">
								<nav class="navbar navbar-expand-md p-0" id="bizople-header-ten">
									<div class="collapse navbar-collapse" id="header10-menuitem">
										<!-- <ul class="navbar-nav" id="top_menu"> -->
										<t t-call="website.navbar_nav" id="top_menu">
                        					<t t-set="_nav_class" t-valuef="me-auto"/>
											<t t-foreach="website.menu_id.child_id" t-as="submenu">
												<t t-call="website.submenu">
													<t t-set="item_class" t-value="'nav-item'" />
													<t t-set="link_class" t-value="'nav-link'" />
												</t>
											</t>
										</t>
										<!-- </ul> -->
									</div>
								</nav>
							</div>
							<div class="col-md-3 text-end right_icons d-none d-md-block header_right">
								
								<div class="wishlist align-middle d-none d-lg-inline-block">
									<t t-if="is_view_active('website_sale_wishlist.add_to_wishlist')">
										<t t-set='wishcount'
											t-value="len(request.env['product.wishlist'].current())" />
										<div id="my_wish" class="nav-item header_wishlist o_wsale_my_wish d-block">
											<a href="/shop/wishlist" class="nav-link ps-3">
												<span class="text-secondary icon icon-Heart align-middle"/>
												<sup
													t-attf-class="my_wish_quantity o_animate_blink badge badge-primary text-bg-primary">
													<t t-out='wishcount' />
												</sup>
											</a>
										</div>
									</t>
								</div>
								<div class="cart align-middle d-none d-lg-inline-block" id="">
									<t t-if="is_view_active('website_sale.products_add_to_cart')">
										<t t-set="website_sale_order" t-value="website.sale_get_order()" />
			                			<div id="my_cart" t-attf-class="o_wsale_my_cart header_cart nav-item#{'' if website_sale_order and website_sale_order.cart_quantity else ''}">
											<a href="/shop/cart" class="nav-link ps-3">
												<span class="text-secondary icon icon-FullShoppingCart align-middle"></span>
												<sup t-attf-class="my_cart_quantity badge badge-primary text-bg-primary"
													t-out="website_sale_order and website_sale_order.cart_quantity or '0'" />
											</a>
										</div>
									</t>
								</div>
								<div class="header-myaccount align-items-center align-middle d-none d-md-inline-block">
		                			
		                		</div>
							</div>
						</div>
					</div>
				</section>
				
			</nav>
		</xpath>
		<xpath expr="//header" position="after">
			<div class="d-block d-md-none">
				<t t-call="theme_nextbiz.bizople_mobile_bottom_icon_bar"/>
			</div>
		</xpath>
	</template>

	<template id="bizople_mobile_bottom_icon_bar" name="Bizople Mobile Bottom Icon Bar">
    	<div class="bizople-mbl-bottom-bar d-block d-xl-none bg-white">
			<div class="container">
				<div class="row align-items-center justify-content-center">
					<div class="col text-center bottom-sidebar-menu">
						<div class="text-center">
	                   		<a role="button" href="#" class="nav-link bottom-show-sidebar">
								<i class="ti ti-view-grid text-dark" />
							</a>
						</div>
						<div class="text-center">
							<span class="text-dark">Menu</span>
						</div>
					</div>
					<div class="col text-center bottom-bar-home">
						<div class="text-center">
	                   		<a href="/" class="nav-link">
								<i class="text-dark icon icon-House" />
							</a>
						</div>
						<div class="text-center">
							<span class="text-dark">Home</span>
						</div>
					</div>
					
					<div class="col text-center bottom-bar-language">
						<ul class="menu-language js_language_selector mb0 list-inline text-lg-center list-unstyled"
							t-if="((request and request.is_frontend_multilang and (languages and len(languages) > 1)) or (website and (editable or translatable)))">
							<li class="d-inline-block">
					            <div class="dropup">
					                <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
					                    <t t-foreach="website.language_ids" t-as="lg">
											<t t-if="request.context.get('lang') == lg.code">
												<img t-attf-src="{{lg.flag_image_url}}" width="18" t-att-title="lg.name" t-att-class="lg.code" />
											</t>
								        </t>
					                </a>
					                <div class="dropdown-menu" role="menu">
										<t t-foreach="frontend_languages.values()" t-as="lg">
											<a t-att-href="url_localized(request.httprequest.path + '?' + keep_query(), lang_code=lg.code)"
												class="dropdown-item js_change_lang"
												t-att-data-url_code="lg.url_code">
												<t t-out="lg.name.split('/').pop()"/>
											</a>
										</t>
									</div>
					            </div>
					        </li>
						</ul>
					</div>
					<div class="col text-center">
					</div>
				</div>
			</div>
		</div>
	</template>

	<template id="header10_cart_sidebar_open" inherit_id="theme_nextbiz.theme_nextbiz_header10" name="Show Cart Sidebar" customize_show="True" active="True">
		<xpath expr="//div[hasclass('cart')]//a[hasclass('nav-link')]" position="replace">
			<a role="button" class="nav-link nav-link show_cart_sidebar">
				<span class="text-secondary icon icon-FullShoppingCart align-middle"></span>
				<sup t-attf-class="my_cart_quantity badge badge-primary text-bg-primary"
					t-out="website_sale_order and website_sale_order.cart_quantity or '0'" />
			</a>
		</xpath>

		<xpath expr="//div[hasclass('mobile-cart')]//a[hasclass('nav-link')]" position="replace">
			<a role="button" class="nav-link nav-link show_cart_sidebar_mbl">
				<span class="text-secondary icon icon-FullShoppingCart"></span>
				<sup t-attf-class="my_cart_quantity badge badge-primary text-bg-primary"
					t-out="website_sale_order and website_sale_order.cart_quantity or '0'" />
			</a>
		</xpath>
	</template>

	<template id="template_header_six_align_center" inherit_id="theme_nextbiz.theme_nextbiz_header10" active="False">
        <xpath expr="//ul[@id='top_menu']" position="attributes">
            <attribute name="class">nav navbar-nav mx-md-auto</attribute>
        </xpath>
    </template>

    <template id="template_header_six_align_right" inherit_id="theme_nextbiz.theme_nextbiz_header10" active="False">
        <xpath expr="//ul[@id='top_menu']" position="attributes">
            <attribute name="class">nav navbar-nav ms-md-auto</attribute>
        </xpath>
    </template>

</odoo>