<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<template id="theme_common_footer8" inherit_id="website.layout" name="Footer Seven" active="False">
       	<xpath expr="//div[@id='footer']" position="replace">
       		<div id="footer" class="oe_structure oe_structure_solo" t-ignore="true" t-if="not no_footer">
				<section id="footer_theme_common8" class="footer_theme_common8 o_footer">
					<section class="footer-section">
						<div class="container">
							<div class="row justify-content-center pt64 pb64">
								<div class="col-md-4 mb-4 mb-md-0">
									<div class="footer-logo mb-4">
										<a href="/" class="navbar-brand logo p-0 m-0">
								            <img src="/theme_nextbiz/static/src/img/logo-white.png" class="img-fluid"/>
								        </a>
									</div>
									<div class="contact-content">
										<div class="contact-info">
											<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
										</div>
										<div class="footer-language">
										<div class="d-flex menu-language js_language_selector mb0 text-lg-center" t-if="((request and request.is_frontend_multilang and (languages and len(languages) > 1)) or (website and (editable or translatable)))">
											<p class="mb-0 me-2">
												<t t-foreach="website.language_ids" t-as="lg">
								                    <t t-if="request.context.get('lang') == lg.code">
								                        <img t-attf-src="{{lg.flag_image_url}}" width="18" t-att-title="lg.name" t-att-class="lg.code" />
								                    </t>
								                </t>
											</p>
								            <div class="dropdown">
								                <a href="#" class="text-white p-0 nav-link dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
								                    <t t-foreach="website.language_ids" t-as="lg">
									                    <t t-if="request.context.get('lang') == lg.code">
									                        <span class="lang_local_code text-uppercase" t-out="lg.name"/>
									                    </t>
									                </t>
								                </a>
								                <div class="dropdown-menu" role="menu">
								                    <t t-foreach="frontend_languages.values()" t-as="lg">
								                        <a t-att-href="url_localized(request.httprequest.path + '?' + keep_query(), lang_code=lg.code)"
								                           class="dropdown-item js_change_lang"
								                           t-att-data-url_code="lg.url_code">
							                            	<t t-out="lg.name.split('/').pop()"/>
								                        </a>
								                    </t>
								                </div>
								            </div>
									    </div>
									</div>
									</div>
								</div>
								<div class="col-md-2 mb-4 mb-md-0">
									<div class="footer-links">
										<h6 class="mb-5">Company</h6>
										<p><a href="#" class="link">Social Media</a></p>
										<p><a href="#"  class="link">Brand Strategy</a></p>
										<p><a href="#"  class="link">SEO Analysis</a></p>
										<p><a href="#"  class="link">Promotion</a></p>
									</div>
								</div>
								<div class="col-md-2 mb-4 mb-md-0">
									<div class="footer-links">
										<h6 class="mb-5">Quick Links</h6>
										<p><a href="#"  class="link">Home</a></p>
										<p><a href="#"  class="link">Contact Us</a></p>
										<p><a href="#"  class="link">About Us</a></p>
										<p><a href="#"  class="link">Policy</a></p>
									</div>
								</div>
								<div class="col-md-4 mb-4 mb-md-0">
									<div class="apps-link">
										<div class="title">
											<h6>Contact Info</h6>
											<p>
												<span t-out="res_company.street"/>,<br/>
												<span t-out="res_company.city"/>,
												<span t-out="res_company.zip"/>
											</p>
										</div>
										<p class="contact-info">
											<a href="#">
												<span class="fa fa-phone me-2"/>
												<span t-out="res_company.phone"/>
											</a>
										</p>
										<p class="contact-info">
											<a href="#">
												<span class="fa fa-envelope-o me-2"/>
												<span t-out="res_company.email"/>
											</a>
										</p>
									</div>
								</div>
							</div>
						</div>
					</section>
					
				</section>
			</div>
		</xpath>
		<xpath expr="//div[hasclass('o_footer_copyright')]" position="replace">
			<div t-if="not no_copyright" class="o_footer_copyright">
				<section class="copyright-section py-4">
					<div class="container">
						<div class="row align-items-center">
							<div class="col-md-7 mb-4 mb-md-0 company">
								<p class="m-0 text-white o_footer_copyright_name">All Rights Are Reserved By Â©<span t-field="res_company.name" /> 2022</p>
							</div>
							<div class="col-md-5">
								<div class="social-share text-center text-md-end">
									<a class="link px-2" t-att-href="website.social_facebook" t-if="website.social_facebook" target="_blank">
										<i class="fa fa-facebook" />
									</a>
									<a class="link px-2" t-att-href="website.social_twitter" t-if="website.social_twitter" target="_blank">
										<i class="fa fa-twitter" />
									</a>
									<a class="link px-2" t-att-href="website.social_linkedin" t-if="website.social_linkedin" target="_blank">
										<i class="fa fa-linkedin" />
									</a>
									<a class="link px-2" t-att-href="website.social_youtube" t-if="website.social_youtube" target="_blank">
										<i class="fa fa-youtube-play" />
									</a>
									<a class="link px-2" t-att-href="website.social_instagram" t-if="website.social_instagram" target="_blank">
										<i class="fa fa-instagram"></i>
									</a>
									<a class="link m-0 px-2" t-att-href="website.social_github" t-if="website.social_github" target="_blank">
										<i class="fa fa-github"></i>
									</a>
								</div>
							</div>
						</div>
					</div>
				</section>
			</div>
		</xpath>
	</template>
</odoo>