<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<template id="theme_common_footer6" inherit_id="website.layout" name="Footer Six" active="False">
       	<xpath expr="//div[@id='footer']" position="replace">
       		<div id="footer" class="oe_structure oe_structure_solo" t-ignore="true" t-if="not no_footer">
				<section id="footer_theme_common6" class="footer_theme_common6 o_footer">
					<section class="footer-newsletter-section">
						<div class="container-fluid">
							<div class="row">
								<div class="newsletter-wrap">
									<div class="newsletter-content d-flex align-items-center w-100">
										<div class="title-newsletter me-auto">
											<div class="title">Sign Up For Newsletters</div>
										</div>
										<div class="block-subscribe-footer">
											<form class="input-group js_subscribe" data-list-id="1">
												<input type="email" name="email" class="js_subscribe_value form-control bg-white" placeholder="Email Address"/>
												<span class="input-group-append">
										            <a role="button" href="#" class="btn btn-secondary js_subscribe_btn h-100">Subscribe</a>
										            <a role="button" href="#" class="btn btn-success js_subscribed_btn h-100 d-none" disabled="disabled">Thanks</a>
										        </span>
											</form>
										</div>
										<div class="social-share ms-auto">
											<a class="link" t-att-href="website.social_facebook" t-if="website.social_facebook" target="_blank">
												<i class="fa fa-facebook" />
											</a>
											<a class="link" t-att-href="website.social_twitter" t-if="website.social_twitter" target="_blank">
												<i class="fa fa-twitter" />
											</a>
											<a class="link" t-att-href="website.social_linkedin" t-if="website.social_linkedin" target="_blank">
												<i class="fa fa-linkedin" />
											</a>
											<a class="link" t-att-href="website.social_youtube" t-if="website.social_youtube" target="_blank">
												<i class="fa fa-youtube-play" />
											</a>
											<a class="link" t-att-href="website.social_instagram" t-if="website.social_instagram" target="_blank">
												<i class="fa fa-instagram"></i>
											</a>
											<a class="link m-0" t-att-href="website.social_github" t-if="website.social_github" target="_blank">
												<i class="fa fa-github"></i>
											</a>
										</div>
									</div>
								</div>
							</div>
						</div>
					</section>
					<section class="footer-section">
						<div class="container">
							<div class="row justify-content-center pt64">
								<div class="col-md-4 mb-3">
									<div class="footer-links">
										<h6 class="title">CONTACT INFOMATION</h6>
									</div>
									<div class="contact-content">
										<p >Call Us 24/7 Free</p>
										<h2><span t-out="res_company.phone"/></h2>
										<p>
											<span t-out="res_company.street"/>,<br/>
											<span t-out="res_company.city"/>,
											<span t-out="res_company.zip"/>
										</p>
									</div>
									<div class="footer-image d-flex mt16">
										<div class="image">
											<a href="#">
												<img src="/theme_nextbiz/static/src/img/footer-img1.png" class="img img-fluid"/>
											</a>
										</div>
										<div class="image ms-2">
											<a href="#">
												<img src="/theme_nextbiz/static/src/img/footer-img2.png" class="img img-fluid"/>
											</a>
										</div>
									</div>
								</div>
								<div class="col-md-2 mb-3">
									<div class="footer-links">
										<h6 class="title">COMPANY</h6>
										<p><a href="#">Social Media</a></p>
										<p><a href="#">Brand Strategy</a></p>
										<p><a href="#">SEO Analysis</a></p>
										<p><a href="#">Promotion</a></p>
									</div>
								</div>
								<div class="col-md-2 mb-3">
									<div class="footer-links">
										<h6 class="title">EXPLORE</h6>
										<p><a href="#">Home</a></p>
										<p><a href="#">Contact Us</a></p>
										<p><a href="#">About Us</a></p>
										<p><a href="#">Policy</a></p>
										<p><a href="#">Computers</a></p>
										<p><a href="#">Speakers</a></p>
									</div>
								</div>
								<div class="col-md-4 mb-3">
									<div class="footer-links">
										<h6 class="title">OUR LOCATION</h6>
									</div>
									<div class="footer-image">
										<div class="image">
											<a href="#">
												<img src="/theme_nextbiz/static/src/img/footer-img3.png" class="img img-fluid"/>
											</a>
										</div>
									</div>
									
									<div class="footer-language">
										<div class="d-flex menu-language js_language_selector mb0 text-lg-center" t-if="((request and request.is_frontend_multilang and (languages and len(languages) > 1)) or (website and (editable or translatable)))">
											<p class="mb-0 me-2">
												<t t-foreach="website.language_ids" t-as="lg">
								                    <t t-if="request.context.get('lang') == lg.code">
								                        <img t-attf-src="{{lg.flag_image_url}}" width="18" t-att-title="lg.name" t-att-class="lg.code" />
								                    </t>
								                </t>
											</p>
								            <div class="dropdown">
								                <a href="#" class="text-white p-0 nav-link dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
								                    <t t-foreach="website.language_ids" t-as="lg">
									                    <t t-if="request.context.get('lang') == lg.code">
									                        <span class="lang_local_code text-uppercase" t-out="lg.name"/>
									                    </t>
									                </t>
								                </a>
								                <div class="dropdown-menu" role="menu">
								                    <t t-foreach="frontend_languages.values()" t-as="lg">
								                        <a t-att-href="url_localized(request.httprequest.path + '?' + keep_query(), lang_code=lg.code)"
								                           class="dropdown-item js_change_lang"
								                           t-att-data-url_code="lg.url_code">
							                            	<t t-out="lg.name.split('/').pop()"/>
								                        </a>
								                    </t>
								                </div>
								            </div>
									    </div>
									</div>
								</div>
							</div>
						</div>
					</section>
					
				</section>
			</div>
		</xpath>
		<xpath expr="//div[hasclass('o_footer_copyright')]" position="replace">
			<div t-if="not no_copyright" class="o_footer_copyright">
				<section class="copyright-section py-4">
					<div class="container">
						<div class="row align-items-center">
							<div class="col-md-7 mb-4 mb-md-0 company">
								<p class="m-0 o_footer_copyright_name">All Rights Are Reserved By Â©<span t-field="res_company.name" /> 2022</p>
							</div>
							<div class="col-md-5">
								<div class="payment-image text-md-end">
									<img src="/theme_nextbiz/static/src/img/payment-footer.png" class="img-fluid"/>
								</div>
							</div>
						</div>
					</div>
				</section>
			</div>
		</xpath>
	</template>
</odoo>